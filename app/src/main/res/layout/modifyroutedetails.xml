<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_margin="20dp"
            android:orientation="vertical">


            <LinearLayout
                android:background="@drawable/linearlayoutdesignback"
               style="@style/AppTheme.Lineaarlayoutstyle"
              >

                <TextView
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:text="VEHICLE INFORMATION"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <EditText android:id="@+id/RouteNo"
                style="@style/AppTheme.Editroutedetails"
                android:hint="Route No"
                android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <EditText android:id="@+id/FromPlace"
                        style="@style/AppTheme.Editroutedetails"
                        android:hint="From Address"
                        android:imeOptions="actionNext"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <EditText android:id="@+id/Toplace"
                        style="@style/AppTheme.Editroutedetails"
                        android:hint="To Address"
                        android:imeOptions="actionNext"
                       />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"

                android:id="@+id/SwapFromaddress"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/swap"
                    android:layout_gravity="center"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >
            <EditText android:id="@+id/RegistrationNo"
                style="@style/AppTheme.Editroutedetails"
                android:hint="Regestration No"
                android:imeOptions="actionNext"
               />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <EditText android:id="@+id/drivername"
                style="@style/AppTheme.Editroutedetails"
                android:hint="Driver Name"
                android:imeOptions="actionDone"
               />
        </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_gravity="end|bottom"
        android:id="@+id/editablebutton"
        android:layout_margin="16dp"
        android:src="@drawable/edit"
        android:layout_height="match_parent" />
</android.support.v7.widget.CardView>